{
  "name": "fourmiliere-royale",
  "version": "1.0.0",
  "description": "Jeu 2D de fourmilière avec intégration Twitch",
  "main": "server/server.ts",
  "scripts": {
    "predev": "node check-version.js",
    "dev": "concurrently \"npm run server\" \"npm run client:dev\"",
    "build": "npm run client:build",
    "build:dev": "cd client && vite build --mode development",
    "serve": "npm run client:serve",
    "server": "node server/server.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:serve": "cd client && npm run serve",
    "start": "npm run build && npm run server",
    "check": "node check-version.js",
    "demo": "node demo.js"
  },
  "keywords": ["twitch", "game", "phaser", "websocket"],
  "author": "StreamAnts",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/ws": "^8.5.0",
    "concurrently": "^8.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "tmi.js": "^1.8.0",
    "ws": "^8.13.0"
  }
}
